@model Presentation.Controllers.UserRegisterByEmployee
           
@using (Html.BeginForm("RegisterByEmployee", "Account", FormMethod.Post, new {autocomplete = "on", id="form_registerByEmployee"}))
{
                                        <h1> ثبت نام </h1>

                                        <ul class="info-register">
                                            <li>نام و نام خانوادگی با توجه به سیستم ‍برسنلی می باشد</li>
                                            <li>نام کاربری را حتما از حروف لاتین استفاده کنید</li>
                                        </ul>

                                        <p class="personel-name">
                                            <label for="usernamesignup" class="personel-name">نام برسنلی</label>
                                            <input id="employeeCombo"/>
                                            @Html.HiddenFor(m=>m.EmployeeId)
                                        </p>
                                        <p>
                                            <label for="usernamesignup" class="uname" data-icon="">نام کاربری</label>
                                            @Html.TextBoxFor(m=>m.UserName, new {placeholder="User name"})
                                        </p>

                                        <p>
                                            <label for="passwordsignup" class="youpasswd" data-icon="">کلمه عبور</label>
                                            @Html.PasswordFor(m=>m.Password, new {placeholder= "Password"})
                                        </p>
                                        <p>
                                            <label for="passwordsignup_confirm" class="youpasswd" data-icon="">تایید کلمه عبور </label>
                                            @Html.PasswordFor(m=>m.ConfirmPassword , new {placeholder="Confirm password"})
                                        </p>
                                        <p>
                                            <div class="validation-error" style="display: none">
                                                <h2>لطفا خطاها را تصحیح کنید</h2>
                                                <ul id="register_errors">
                                                   
                                                </ul>
                                            </div>
                                        </p>
                                        <p class="signin button">
                                            <input type="submit" value="تکمیل ثبت نام" />
                                        </p>
                                        <p class="change_link">

                                            <a href="#tologin" class="to_register"> نام کاربری دارم </a>
                                            <a  id="changeToRegisterByName" class="to_register">ثبت نام بعنوان کاربران غیر سازمانی</a>
                                        </p>
}


